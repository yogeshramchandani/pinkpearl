<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbarColor"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>
    <!-- Banner -->

    <!-- Content -->

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/image2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:padding="16dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Our School"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our school was established in 2005 with a mission to provide world-class education..."
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Banner Image -->
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                android:contentDescription="School Banner"
                />

            <!-- About Us Heading -->
            <TextView
                android:id="@+id/aboutUsHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingTop="16dp" />

            <!-- About School Paragraph -->
            <TextView
                android:id="@+id/aboutParagraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pink Pearl School has been dedicated to nurturing young minds since its inception. Established in 1995, the school has provided quality education to thousands of students. With a focus on holistic development, the school offers a nurturing environment that encourages creativity, discipline, and excellence."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <!-- Image and Text Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <!-- Image -->
                <ImageView
                    android:id="@+id/schoolImage"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:src="@drawable/image1"
                    android:scaleType="centerCrop"
                    android:contentDescription="School Building"
                    android:layout_marginEnd="8dp" />

                <!-- Text Next to Image -->
                <TextView
                    android:id="@+id/schoolText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Our school campus features state-of-the-art facilities, including modern classrooms, a fully equipped library, science and computer labs, and expansive sports grounds. These facilities ensure that students receive a well-rounded education and the best resources to support their growth."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <!-- Image -->


                <!-- Text Next to Image -->
                <TextView
                    android:id="@+id/schoolText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="In addition to academics, the school emphasizes extracurricular activities, offering programs in music, arts, drama, and sports. These opportunities foster creativity and teamwork, ensuring that students not only excel in their studies but also develop essential life skills and explore their passions."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/schoolImage2"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:src="@drawable/indoorgames"
                    android:scaleType="centerCrop"
                    android:contentDescription="School Building"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
